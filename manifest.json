{
    "manifest_version": 2,
    "name": "BioMio",
    "description": "This extension will allow you to encrypt/decrypt your emails",
    "version": "1.0",

    "content_scripts": [
        {
            "matches": ["*://mail.google.com/*"],
            "js": ["jquery-1.11.1.js", "contentscript.js"],
            "run_at": "document_end"
        }
    ],
    "background": {
        "scripts": ["background.js"]
    },

    "permissions": [
        "tabs",
        "activeTab"
    ],
    "web_accessible_resources": [
        "*.js"
    ]
}